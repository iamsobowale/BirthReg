@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

}
@model birthreg.ViewModels.AddChildViewModel

<h2>Add Child</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddChild">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col">
                <div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nationality" class="control-label">Nationality</label>
                        <select id="country" name="Nationality" class="form-control m-1 w-100">
                            <option disabled selected>Select Nationality </option>
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="control-label">State</label>
                        <select id="state" name="State" class="form-control m-1 w-100">
                            <option value="" disabled selected>Select State </option>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @foreach (var gender in System.Enum.GetValues(typeof(birthreg.Enums.GenderEnum)))
                        {
                            <label class="m-1" asp-for="Gender">@gender</label>
                            <input class="m-1" type="radio" asp-for="Gender" value="@((int)gender)" />
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <label asp-for="Weigth" class="control-label"></label>
                        <input asp-for="Weigth" placeholder="In Kg" class="form-control" />
                        <span asp-validation-for="Weigth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Length" class="control-label"></label>
                        <input asp-for="Length" class="form-control" />
                        <span asp-validation-for="Length" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select name="ParentId" class="form-control m-1 w-100" asp-items="ViewBag.ParentId" required>
                            <option value="">Select Parent</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MidWife" class="control-label"></label>
                        <input asp-for="MidWife" class="form-control" />
                        <span asp-validation-for="MidWife" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactEmail" class="control-label"></label>
                        <input asp-for="ContactEmail" class="form-control" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactNumber" class="control-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
